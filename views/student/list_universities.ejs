<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
        <title>List Universities</title>
    </head>
<body>

    <div class="container" style="width: 700px;">
        <div class="text-center">
            <h1>List Universities</h1>
        </div>
    </div>
    <button type="button" class="btn btn-success">
        <a href="/student/<%= result[0].University.id%>/profile">Profile</a>
    </button>
    <table class="table">
        <thead>
            <td>Name</td>
            <td>Average Minimum Score</td>
            <td>Action</td>
        </thead>
        <tbody>
            <% result.forEach(el => { %>
                <tr>
                    <td><%= el.University.name %></td>
                    <td><%= el.dataValues.average %></td>
                    <td>
                        <button type="button" class="btn btn-success">
                            <a href="/student/<%= studentId %>/chance/<%= el.University.id %>">See Detail</a>
                        </button>
                    </td>
                </tr>
            <% }) %> 
        </tbody>
    </table>
    <button type="button" class="btn btn-danger">
        <a href="/logout">logout</a>
    </button>
</body>
</html>