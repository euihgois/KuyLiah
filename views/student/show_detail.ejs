<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <title>Chance</title>
</head>
<body>
<div>
    
    <%=  JSON.stringify(programmes.map(x => {return x.chance}).join(",")) %> 
    
</div>
<div class="container" style="width: 700px;">
    <div class="text-center">
        <h1> Detail Univ </h1>
    </div>
    <div>
        <strong>Kamu mendaftar di Universitas</strong> <%= //programmes[0].University.name  %> 
        <br>
        Peluang Masuk 
    </div>
    
    <div style="height: 400px; width:400px;">
        <canvas id="myChart" ></canvas>
    </div>

      
    <div style="height: 400px; width:400px;">
        <canvas id="wowwow" ></canvas>
    </div>
    
</div>
    <script> 
    const data = {
    labels: [
    ...(<%-JSON.stringify(programmes.map(x => {return x.name}).join(","))%>).split(',') 
    ],
    datasets: [{
    label: 'Peluang Masuk',
    data:  [ ...(<%-JSON.stringify(programmes.map(x => {return x.chance}).join(","))%>).split(',') ],
    backgroundColor: [
      'rgb(255, 99, 132)',
      'rgb(0, 255, 0)'
    ],
    hoverOffset: 3
    }]
    };
    
    const config = {    
    type: 'bar',
    data: data,
    };    
    const myChart = new Chart(
        document.getElementById('myChart'),
        config
    );
    </script>
</body>
</html>
